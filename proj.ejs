        }
        .hlist a{
            color: rgb(255, 255, 255);
            font-size: 17px;
            font-weight: 500;
            margin: 0 30px;
            padding: 8px 15px;
            border-radius: 5px;
            transition: all .45s ease;
            box-shadow: 3px 3px 10px 5px #3d3d3d;
        }
        .hlist a:hover{
            color: rgb(106, 101, 101);
        }
        .hlist li a:hover{
            background: #fff;
            color: black;
        }
        .heading{
